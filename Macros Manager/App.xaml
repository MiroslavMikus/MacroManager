<Application x:Class="Macros_Manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Macros_Manager"
             xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
             xmlns:unity="clr-namespace:Macros_Manager.Unity"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Resources/ExternalResources.xaml" />
                <ResourceDictionary Source="View/Resources/MhAppsBrushes.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <unity:ViewModelContainer x:Key="Container"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
